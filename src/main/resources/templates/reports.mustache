<html>
<body>
<a href="/main">Главная страница</a>
<h1>Таблица отчетов пользователя <i>{{user.username}}</i></h1>
<table border="1" cellpadding="5" style="border-collapse: collapse;">
    <thead>
    <tr>
        <th>Заголовок</th>
        <th>Потраченное время<br>(в минутах)</th>
        <th>Дата выполнения</th>
        <th>Файл отчета</th>
        <th>Итоговый файл</th>
        <th>Комментарии</th>
        <th>Статус</th>
        {{#checkForPermission}}
            <th>Принять отчет</th>
        {{/checkForPermission}}
    </tr>
    </thead>
    <tbody>
    {{#reports}}
    <tr>
        <td>{{title}}</td>
        <td>{{timeSpent}}</td>
        <td>{{stringDate}}</td>
        <td><a href="/reports/{{reportLink}}">Скачать файл</a></td>
        <td><a href="/reports/{{resultLink}}">Скачать файл</a></td>
        <td>{{comments}}</td>
        {{#accepted}}
            <td style="color: green; text-align: center;">✔</td>
            {{#checkForPermission}}
                <td style="color: gray;">Отчет принят</td>
            {{/checkForPermission}}
        {{/accepted}}
        {{^accepted}}
            <td style="color: red; text-align: center;">❌</td>
            {{#checkForPermission}}
                <td>
                    <form action="/reports/{{id}}" method="POST">
                        <input type="submit" value="Принять отчет">
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                    </form>
                </td>
            {{/checkForPermission}}
        {{/accepted}}
    </tr>
    {{/reports}}
    </tbody>
</table>
</body>
</html>